<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework-message-queue:etc/topology.xsd">
    <exchange name="magento-db" type="topic" connection="db">
        <binding id="dotdigitalSyncExchange"
                 topic="ddg.sync.integration"
                 destinationType="queue"
                 destination="ddg.sync.queue"/>
        <binding id="dotdigitalUnsubscribeExchange"
                 topic="ddg.newsletter.unsubscribe"
                 destinationType="queue"
                 destination="ddg.unsubscribe.queue"/>
        <binding id="dotdigitalResubscribeExchange"
                 topic="ddg.newsletter.resubscribe"
                 destinationType="queue"
                 destination="ddg.resubscribe.queue"/>
        <binding id="dotdigitalContactEmailUpdate"
                 topic="ddg.contact.email_update"
                 destination="ddg.email_update.queue"/>
        <binding id="dotdigitalCartPhaseUpdateBinding" topic="ddg.sales.cart_phase_update" destination="ddg.cart_phase_update.queue"/>
    </exchange>
</config>
